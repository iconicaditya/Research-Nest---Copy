{
  "name": "rest-express",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev:client": "vite dev --port 5000",
    "dev:server": "cross-env NODE_ENV=development tsx server/index.ts",
    "dev": "npm-run-all --parallel dev:client dev:server",

    "build:client": "vite build --outDir dist/client",
    "build:server": "tsc -p server/tsconfig.json --outDir dist",
    "build": "npm run build:client && npm run build:server",

    "start": "cross-env NODE_ENV=production node dist/index.cjs",

    "check": "tsc",

    "migrate:generate": "drizzle-kit generate",
    "migrate:push": "node -e \"if(process.env.VERCEL){console.log('Skipping migrations on Vercel');process.exit(0)}\" && drizzle-kit push",
    "migrate:status": "drizzle-kit status"
  },
