{
  "include": [
    "client/src",
    "server",
    "shared",
    "server/types"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo",

    "noEmit": true,  // ensures TS does not output compiled files, needed for serverless

    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "preserve",

    "baseUrl": ".",
    "types": ["node", "vite/client"],

    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"]
    }
  }
}
